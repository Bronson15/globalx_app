<!--- header partial for the app --->

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="header-img">
      <%= link_to image_tag("globalx.png", alt: "globalX logo", id: "header-logo"), root_path %>
    </div>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Blog",   blog_path %></li>
        <li><%= link_to "Trips",  trips_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Participants", '#' %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_participant.first_name + " " + current_participant.last_name %>
               <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_participant %></li>
              <li><%= link_to "Settings", '#' %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log Out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>        
      </ul>
    </nav>
  </div>
</header>