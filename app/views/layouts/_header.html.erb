<!--- header partial for the app --->

<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <div class="header-img">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#mainNavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span> 
      </button>
      <%= link_to image_tag("globalx.png", alt: "globalX logo", id: "header-logo"), root_path %>
    </div>
    <nav>
      <div class="collapse navbar-collapse" id="mainNavbar">
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Home",   root_path %></li>
        <li><%= link_to "Blog",   blog_path %></li>
        <% if logged_in? %>
          <% if current_participant.admin? %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                Trips
                <b class="caret"></b>
              </a>
              <ul class="dropdown-menu">
                <li><%= link_to "Trip List",    trips_path %></li>
                <li><%= link_to "Create Trip",  new_trip_path %></li>
              </ul>
            <li><%= link_to "Participants", participants_path %></li>
          <% else %>
            <li><%= link_to "Trips",  trips_path %></li>  
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= current_participant.first_name + " " + current_participant.last_name %>
               <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_participant %></li>
              <li><%= link_to "Settings", edit_participant_path(current_participant) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log Out", logout_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Trips",  trips_path %></li>
          <li><%= link_to "Log In", login_path %></li>
        <% end %>        
      </ul>
    </div>
    </nav>
  </div>
</header>