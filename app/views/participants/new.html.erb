<%= provide(:title, "Sign Up") %>
<h1>Sign Up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@participant) do |f| %>
      <%= render 'shared/error_messages' %>

      <%= f.label :first_name %>
      <%= f.text_field :first_name, class: "rounded form-control" %>

      <%= f.label :last_name %>
      <%= f.text_field :last_name, class: "rounded form-control" %>

      <%= f.label :email %>
      <%= f.text_field :email, class: "rounded form-control" %>

      <%= f.label :phone_number %>
      <%= f.text_field :phone_number, class: "rounded form-control" %>

      <%= f.label :address %>
      <%= f.text_field :address, class: "rounded form-control" %>

      <%= f.label :address2, "Address 2" %>
      <%= f.text_field :address2, class: "rounded form-control" %>

      <%= f.label :city %>
      <%= f.text_field :city, class: "rounded form-control" %>

      <%= f.label :state %>
      <%= f.select :state, options_for_select(us_states), class: "rounded form-control" %>

      <%= f.label :zip %>
      <%= f.text_field :zip, class: "rounded form-control" %>

      <%= f.label :birthdate %>
      <%= f.text_field :birthdate, class: 'datepicker' %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "rounded form-control" %>

      <%= f.label :password_confirmation, "Confirmation" %>
      <%= f.password_field :password_confirmation, class: "rounded form-control" %>
      
      <span class="picture">
        <%= f.label :picture, "Profile Picture" %>
        <%= f.file_field :picture, id: "picture-upload", accept: 'image/jpg,image/gif,image/png,image/jpeg' %>
        <img id="img_prev" src="#" alt="your image" class="img-thumbnail hidden">
        <%= f.hidden_field :picture_cache %>
      </span>
      <br>
      <br>
      <%= f.submit "Create My Account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });

  $('#participant_picture').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>